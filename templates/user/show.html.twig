{% extends 'base.html.twig' %}

{% block title %}Profil | {{ parent() }}{% endblock %}

{% block body %}
    <h1>Profil {{ user.nom}}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Pseudo</th>
            <td>{{ user.pseudo }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ user.nom }}</td>
        </tr>
        <tr>
            <th>Prenom</th>
            <td>{{ user.prenom }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Telephone</th>
            <td>{{ user.telephone }}</td>
        </tr>
        <tr>
            <th>Password</th>
            <td>{{ user.password }}</td>
        </tr>
        <tr>
            <th>Photo</th>
            <td>{{ user.photo }}</td>
        </tr>

        {% if is_granted("ROLE_ADMIN") %}
        <tr>

            <th>Roles</th>
            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
        </tr>
        <tr>
            <th>Administrateur</th>
            <td>{{ user.administrateur ? 'Yes' : 'No' }}</td>
        </tr>
        <tr>
            <th>Acitif</th>
            <td>{{ user.acitif ? 'Yes' : 'No' }}</td>
        </tr>
        {% endif%}

        </tbody>
    </table>

    {% if is_granted("ROLE_ADMIN") %}
        <a href="{{ path('admin_liste_users') }}">back to list</a>
        {{ include('user/_delete_form.html.twig') }}
    {% endif %}

    <a href="{{ path('editer_profil', {'id': user.id}) }}">edit</a>


{% endblock %}
